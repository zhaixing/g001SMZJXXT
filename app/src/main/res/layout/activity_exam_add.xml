<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.Exam.ExamAddActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="创建考试" />

    </android.support.design.widget.AppBarLayout>

    <com.xcf.admin.couldclass.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--默认地址-->
            <LinearLayout
                style="@style/linearlayout_style"
                >

                <TextView
                    style="@style/linearlayout_text_style"
                    android:layout_width="30dp"
                    android:text="名称:" />

                <EditText
                    android:id="@+id/add_exam_name"
                    style="@style/linearlayout_edit_style"
                    android:layout_width="100dp"
                    android:layout_weight="1.3"
                    android:text="无"
                    android:textAlignment="textEnd" />

            </LinearLayout>

        <LinearLayout
            style="@style/linearlayout_style"
            >
            <TextView
                style="@style/linearlayout_text_style"
                android:layout_width="30dp"
                android:text="类型:" />
            <EditText
                android:id="@+id/add_exam_type"
                style="@style/linearlayout_edit_style"
                android:layout_width="100dp"
                android:layout_weight="1.3"
                android:text="无"
                android:textAlignment="textEnd" />
        </LinearLayout>

            <LinearLayout
                style="@style/linearlayout_style"
                >
                <TextView
                    style="@style/linearlayout_text_style"
                    android:layout_width="30dp"
                    android:text="开始时间:" />
                <EditText
                    android:id="@+id/add_exam_start"
                    style="@style/linearlayout_edit_style"
                    android:layout_width="100dp"
                    android:layout_weight="1.3"
                    android:text="无"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                style="@style/linearlayout_style"
                >
                <TextView
                    style="@style/linearlayout_text_style"
                    android:layout_width="30dp"
                    android:text="结束时间:" />
                <EditText
                    android:id="@+id/add_exam_end"
                    style="@style/linearlayout_edit_style"
                    android:layout_width="100dp"
                    android:layout_weight="1.3"
                    android:text="无"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                style="@style/linearlayout_style"
                >
                <TextView
                    style="@style/linearlayout_text_style"
                    android:layout_width="30dp"
                    android:text="单选题题量:" />
                <EditText
                    android:id="@+id/add_exam_danxuan"
                    style="@style/linearlayout_edit_style"
                    android:layout_width="100dp"
                    android:layout_weight="1.3"
                    android:text="无"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                style="@style/linearlayout_style"
                >
                <TextView
                    style="@style/linearlayout_text_style"
                    android:layout_width="30dp"
                    android:text="多选题题量:" />
                <EditText
                    android:id="@+id/add_exam_duoxuan"
                    style="@style/linearlayout_edit_style"
                    android:layout_width="100dp"
                    android:layout_weight="1.3"
                    android:text="无"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                style="@style/linearlayout_style"
                >
                <TextView
                    style="@style/linearlayout_text_style"
                    android:layout_width="30dp"
                    android:text="判断题题量:" />
                <EditText
                    android:id="@+id/add_exam_panduan"
                    style="@style/linearlayout_edit_style"
                    android:layout_width="100dp"
                    android:layout_weight="1.3"
                    android:text="无"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        <!--区循环显示-->
        <LinearLayout
            style="@style/linearlayout_style"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">
            <TextView
                android:id="@+id/submit_tv"
                style="@style/linearlayout_text_style"
                android:background="@color/green"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                />

        </LinearLayout>

        </LinearLayout>


    </com.xcf.admin.couldclass.widget.MyNestedScrollView>
</android.support.design.widget.CoordinatorLayout>