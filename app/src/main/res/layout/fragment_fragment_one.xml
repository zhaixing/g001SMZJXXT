<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xcf.admin.couldclass.Activitys.Main.FragmentOne">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_marking"
                android:layout_width="match_parent"
                android:layout_height="160dp"

                android:layout_weight="1"
                android:height="30dp"
                android:background="@mipmap/btn01"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/btnc"
                android:paddingTop="20dp"
                android:text="在线答题"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_practice"
                android:layout_width="match_parent"
                android:layout_height="160dp"

                android:layout_weight="1"
                android:height="30dp"
                android:background="@mipmap/btn01"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/btnb"
                android:paddingTop="20dp"
                android:text="在线练习"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_teach"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:height="30dp"
                android:background="@mipmap/btn01"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/btnd"
                android:paddingTop="20dp"
                android:text="在线教育"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_rank"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:height="30dp"
                android:background="@mipmap/btn01"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/btna"
                android:paddingTop="20dp"
                android:text="排行榜"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
