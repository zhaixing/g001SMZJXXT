<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:padding="8dp"
tools:context=".Activitys.Main.FragmentStudy">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left|top"
    android:background="@color/bacground"
    android:overScrollMode="never"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:visibility="visible">

        <Spinner
            android:id="@+id/exam_spin_major"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:dropDownWidth="125dp"
            android:entries="@array/categary"
            android:overlapAnchor="false" />

        <Spinner
            android:id="@+id/exam_spin_complete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/exam_spin_major"
            android:dropDownWidth="120dp"
            android:entries="@array/done"
            android:overlapAnchor="false" />

        <Spinner
            android:id="@+id/exam_spin_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:dropDownWidth="125dp"
            android:entries="@array/timeAsc"
            android:overlapAnchor="false" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
<ListView
    android:id="@+id/listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginTop="45dp"
    android:dividerHeight="2dp">

</ListView>

</FrameLayout>